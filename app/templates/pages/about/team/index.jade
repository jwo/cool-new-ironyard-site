extends /layouts/main

block meta
  +meta({
      title:"Iron Yard- Team",
      description:"We are a group of passionate thinkers and builders who believe that great people can use technology to make the world a better place."
    })

block content
  +navigation({
    color: 'gray-dark',
    title: 'Our Team',
    links: [
      {title: "Leadership", url: "#leadership"},
      {title: "Accelerator", url: "#accelerator"},
      {title: "Campus Directors", url: "#campus-directors"},
      {title: "Instructors", url: "#instructors"},
      {title: "Teaching Assistants", url: "#teaching-assistants"}
    ]
